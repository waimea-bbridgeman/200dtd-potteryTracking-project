{#=====================================================
  Home page
  - Hero style greeting banner
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo

{% endblock %}


{% block content %}

{#add a search bar in#}

   <h1>Pieces</h1>


    <article>

        <ul>
            {% for piece in pieces %}

                <li>
                    <a href="/piece/{{ piece.id }}">
                        {{ piece.name }}
                    </a>
                </li>

            {% else %}

                <p>Get to making something!</p>

            {% endfor %}
        </ul>

    </article>


    <h1>Glazes</h1>


    <article>

        <ul>
            {% for glaze in glazes %}

                <li>
                    <a href="/glaze/{{ glaze.id }}">
                        {{ glaze.name }}
                    </a>
                </li>

            {% else %}

                <p>You need to buy some!</p>

            {% endfor %}
        </ul>

    </article>


  
    

{% endblock %}

